
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())  // ID único para cada usuario
  name      String     // Nombre del usuario
  email     String     @unique  // Correo electrónico único
  password  String     // Contraseña del usuario
  documents Document[] // Relación con los documentos del usuario

  createdAt DateTime @default(now())  // Fecha de creación del usuario
  updatedAt DateTime @updatedAt        // Fecha de última actualización del usuario
}

model Document {
  id        Int    @id @default(autoincrement())  // ID único para cada documento
  title     String // Título del documento
  format    String // Formato del documento
  path      String // Ruta del documento
  userId    Int    // Clave foránea para el usuario que posee el documento
  user      User   @relation(fields: [userId], references: [id])  // Relación con el modelo User

  createdAt DateTime @default(now())  // Fecha de creación del documento
  updatedAt DateTime @updatedAt        // Fecha de última actualización del documento
}